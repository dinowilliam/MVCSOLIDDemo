@model WilliamFerreira.Domain.Models.User

@{
    ViewBag.Title = "Exclusão";
}

<h2>Exclusão de Usuário</h2>

<h3>Tem certeza de que deseja excluir esse registro?</h3>
<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Ativo?
        </dt>

        <dd>
            @(Convert.ToInt32(Model.Active) == 0 ? "Não" : "Sim")
        </dd>

        <dt>
            Sexo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sex)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default btn-sm" /> 
            @Html.ActionLink("Voltar Para Lista", "Index", "User", htmlAttributes: new { @class = "btn btn-default btn-sm" })
        </div>
    }
</div>
