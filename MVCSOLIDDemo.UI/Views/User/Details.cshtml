@model MVCSOLIDDemo.UI.Models.User

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes do Usuário</h2>

<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Nome:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
           Ativo?
        </dt>

        <dd>
            @(Convert.ToInt32(Model.Active) == 0 ? "Não" : "Sim")
        </dd>

        <dt>
            Sexo:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sex)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", "User", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-default btn-sm" }) |
    @Html.ActionLink("Voltar Para Lista", "Index", "User", htmlAttributes: new { @class = "btn btn-default btn-sm" })
</p>
