            <div class="row">
                <div class="col-md-2">
                    <label id="lblDesIBGE" for="lblDesIBGE"  valeu="Código IBGE:" class="form-control"></label>
                </div>
                <div class="col-md-10">
                    <label id="lblIBGE" for="lblIBGE" class="form-control"></label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label id="lblDesGIA" for="lblDesGIA" value="GIA:" class="form-control"></label>
                </div>
                <div class="col-md-10">
                    <label id="lblGIA" for="lblGIA" class="form-control"></label>
