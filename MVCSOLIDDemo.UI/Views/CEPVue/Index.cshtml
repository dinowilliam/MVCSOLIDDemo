                    <label id="lblDesLogradouro" for="lblDesLogradouro" value="Logradouro:" class="form-control"></label>
                </div>
                <div class="col-md-10">
                    <label id="lblLogradouro" for="lblLogradouro" class="form-control"></label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label id="lblDesComplemento" for="lblDesComplemento" value="Complemento:" class="form-control"></label>
